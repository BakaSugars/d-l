{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "_src/*": [
                "src/*"
            ],
            "_utils/*": [
                "src/utils/*"
            ],
            "_client/*": [
                "src/client/*"
            ],
            "_server/*": [
                "src/server/*"
            ]
        },
        "target": "es5",
        "module": "ESNext",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
}